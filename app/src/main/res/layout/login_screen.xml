<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="com.example.saddam.constraint.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="#1a0808">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="55dp"
                android:id="@+id/spl_image"
                android:layout_gravity="right"
                android:src="@drawable/main_logo"
                android:maxHeight="25dp"
                android:maxWidth="25dp"
                android:minHeight="15dp"
                android:minWidth="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor"
                android:textColor="#dd2e2e"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#1a0808">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="55dp"
                android:id="@+id/spl_image1"
                android:layout_gravity="right"
                android:src="@drawable/main_logo"
                android:maxHeight="25dp"
                android:maxWidth="25dp"
                android:minHeight="15dp"
                android:minWidth="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petient"
                android:textColor="#dd2e2e"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="55dp"
            android:id="@+id/spl_image2"
            android:layout_gravity="right"
            android:src="@drawable/doctor"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:minHeight="15dp"
            android:minWidth="15dp"
            />
        <TextView android:id="@+id/splashText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:text="@string/spl_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <EditText
            android:layout_width="313dp"
            android:layout_height="51dp"
            android:capitalize="words"
            android:layout_gravity="center"
            android:id="@+id/userName"
            android:hint="Enter Your Mobile Number"
            android:textAlignment="center"
            />
        <EditText
            android:layout_width="313dp"
            android:layout_height="51dp"
            android:capitalize="words"
            android:layout_gravity="center"
            android:id="@+id/password"
            android:hint="Enter Your Password"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/submit_style"
            android:id="@+id/logIn"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Have Not Any Account?"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register Here"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="#33cc33"
            />
    </LinearLayout>

</LinearLayout>
